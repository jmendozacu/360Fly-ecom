<config>
    <api2>
        <resource_groups>
            <fly_subscription translate="title" module="fly_subscription">
                <title>Subscription</title>
                <sort_order>120</sort_order>
                <children>
                    <fly_subscription_package translate="title" module="fly_subscription">
                        <title>Subscription</title>
                        <sort_order>0</sort_order>
                    </fly_subscription_package>

                </children>
            </fly_subscription>
        </resource_groups>
        <resources>
            <fly_subscription_package translate="title" module="fly_subscription">
                <group>fly_subscription_package</group>
                <model>fly_subscription/api2_package</model>
                <working_model>fly_subscription/package</working_model>
                <title>Subscription</title>
                <sort_order>0</sort_order>
                <privileges>
                    <admin>
                        <create>1</create>
                        <retrieve>1</retrieve>
                        <update>1</update>
                        <delete>1</delete>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                    <guest>
                        <retrieve>1</retrieve>
                    </guest>
                </privileges>
                <attributes translate="entity_id customer_id status url_key in_rss meta_title meta_keywords meta_description allow_comment" module="fly_subscription">
                    <entity_id>Id</entity_id>
                    <customer_id>Created At</customer_id>
                    <status>Enabled</status>
                    <url_key>URL key</url_key>
                    <in_rss>In RSS</in_rss>
                    <meta_title>Meta title</meta_title>
                    <meta_keywords>Meta keywords</meta_keywords>
                    <meta_description>Meta description</meta_description>
                    <allow_comment>Allow Comment</allow_comment>
                </attributes>
                <routes>
                    <route_entity>
                        <route>/subscription_packages/:id</route>
                        <action_type>entity</action_type>
                    </route_entity>
                    <route_entity_with_store>
                        <route>/subscription_packages/:id/store/:store</route>
                        <action_type>entity</action_type>
                    </route_entity_with_store>
                    <route_collection>
                        <route>/subscription_packages</route>
                        <action_type>collection</action_type>
                    </route_collection>
                    <route_collection_with_store>
                        <route>/subscription_packages/store/:store</route>
                        <action_type>collection</action_type>
                    </route_collection_with_store>
                </routes>
                <versions>1</versions>
            </fly_subscription_package>

        </resources>
    </api2>
</config>
