<layout>
    <adminhtml_custompayment_order_index>
        <reference name="menu">
            <action method="setActive">
                <menupath>sales/custompayment/order</menupath>
            </action>
        </reference>
        <reference name="content">
            <block type="custompayment/adminhtml_order" name="order" />

        </reference>
    </adminhtml_custompayment_order_index>
    <adminhtml_custompayment_order_grid>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="custompayment/adminhtml_order_grid" name="order_grid"/>
        </block>
    </adminhtml_custompayment_order_grid>
    <!-- Order add/edit action -->
    <adminhtml_custompayment_order_edit>
        <update handle="editor"/>
        <reference name="menu">
            <action method="setActive">
                <menupath>sales/custompayment/order</menupath>
            </action>
        </reference>
        <reference name="content">
            <block type="custompayment/adminhtml_order_edit" name="order_edit"></block>
        </reference>
        <reference name="left">
            <block type="custompayment/adminhtml_order_edit_tabs" name="order_tabs"></block>
        </reference>
    </adminhtml_custompayment_order_edit>

</layout>
