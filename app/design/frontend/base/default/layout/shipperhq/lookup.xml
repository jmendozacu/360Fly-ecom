<layout version="0.1.0">
    <customer_address_form>
        <reference name="head">
            <action method="addCss" ifconfig="carriers/shipper/enable_lookup"><stylesheet>shipperhq/lookup/css/lookup.css</stylesheet></action>
        </reference>
        <reference name="my.account.wrapper">
            <block type="core/template" name="shipperhq_lookup_autocomplete" template="shipperhq/lookup/lookup.phtml"/>
        </reference>
    </customer_address_form>
    <customer_account_create>
        <reference name="head">
            <action method="addCss" ifconfig="carriers/shipper/enable_lookup"><stylesheet>shipperhq/lookup/css/lookup.css</stylesheet></action>
        </reference>
        <reference name="footer">
            <block type="core/template" name="shipperhq_lookup_autocomplete" template="shipperhq/lookup/lookup.phtml"/>
        </reference>
    </customer_account_create>
    <checkout_onepage_index>
        <reference name="head">
            <action method="addCss" ifconfig="carriers/shipper/enable_lookup"><stylesheet>shipperhq/lookup/css/lookup.css</stylesheet></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="shipperhq_lookup_autocomplete" template="shipperhq/lookup/lookup-checkout.phtml"/>
        </reference>
    </checkout_onepage_index>
    <checkout_cart_index>
        <reference name="head">
            <action method="addCss" ifconfig="carriers/shipper/enable_lookup"><stylesheet>shipperhq/lookup/css/lookup.css</stylesheet></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="shipperhq_lookup_autocomplete" template="shipperhq/lookup/lookup-cart.phtml"/>
        </reference>
    </checkout_cart_index>
    <onestepcheckout_index_index>
        <reference name="head">
            <action method="addCss" ifconfig="carriers/shipper/enable_lookup"><stylesheet>shipperhq/lookup/css/lookup.css</stylesheet></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="shipperhq_lookup_autocomplete" template="shipperhq/lookup/lookup-checkout.phtml"/>
        </reference>
    </onestepcheckout_index_index>
</layout>
