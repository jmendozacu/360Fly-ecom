<div class="module-inner">
    <div class="heading">
        <h2>
            <a class="toggle-account-nav collapsed" data-toggle="collapse" href="#account-nav">
                <span class="text"><?php echo $this->__('My Account') ?></span>
                <span class="pe-7s-angle-down"></span>
            </a>
        </h2>
    </div>   

    <div class="collapse" id="account-nav">
        <ul>
            <?php $_links = $this->getLinks(); ?>
            <?php $_index = 1; ?>
            <?php $_count = count($_links); ?>
            <?php foreach ($_links as $_link): ?>
                
                <?php $_last = ($_index++ >= $_count); ?>
                <li class="<?php echo ($_last ? ' last' : '') ?>">
                <?php if ($this->isActive($_link)): ?>
                    <strong><?php echo $_link->getLabel() ?></strong>
                <?php else: ?>
                    <a href="<?php echo $_link->getUrl() ?>"><?php echo $_link->getLabel() ?></a>
                <?php endif; ?>
                </li>
            <?php endforeach; ?>
        </ul>
    </div>
</div>