<?xml version="1.0"?>
<layout version="0.1.0">
	<!-- customer account -->
    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="rebill">
                <name>rebill_manage</name>
                <path>rebill/manage/index</path>
                <label>My Payment Profiles</label>
            </action>			
        </reference>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="rebill">
                <name>rebill_affiliate</name>
                <path>rebill/affiliate/index</path>
                <label>My Referral Information</label>
            </action>
        </reference>
    </customer_account>
    <rebill_manage_index>
        <update handle="customer_account"/>
        <reference name="content">
            <block type="rebill/manage_index" name="rebill_manage_index" template="rebill/manage/index.phtml">
                <action method="setTitle" translate="title" module="rebill">
                    <title>My Payment Profiles</title>
                </action>
            </block>
        </reference>
        <reference name="head">
            <action method="setTitle" translate="title" module="rebill">
                <title>My Payment Profiles</title>
            </action>
        </reference>
    </rebill_manage_index>	
	
	<rebill_manage_edit>
        <update handle="customer_account"/>
        <reference name="content">
            <block type="rebill/manage_edit" name="rebill_manage_edit" template="rebill/manage/edit.phtml">
                <action method="setTitle" translate="title" module="rebill">
                    <title>My Payment Profiles</title>
                </action>
            </block>
        </reference>
        <reference name="head">
            <action method="setTitle" translate="title" module="rebill">
                <title>My Payment Profiles</title>
            </action>
        </reference>
    </rebill_manage_edit>
    <rebill_affiliate_index>
        <update handle="customer_account"/>
        <reference name="content">
            <block type="rebill/affiliate_index" name="rebill_affiliate_index" template="rebill/affiliate/index.phtml">
                <action method="setTitle" translate="title" module="rebill">
                    <title>My Affiliate Information</title>
                </action>
            </block>
        </reference>
        <reference name="head">
            <action method="setTitle" translate="title" module="rebill">
                <title>My Affiliate Information</title>
            </action>
        </reference>
    </rebill_affiliate_index>
</layout>
